<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <template id="report_invoice_total_bold"
              inherit_id="account.report_invoice_document"
              priority="30">

      <!-- Description -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_description']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

      <!-- Quantity -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_quantity']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

      <!-- Unit Price -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_priceunit']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

      <!-- Discount (si affichÃ©) -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_discount']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

      <!-- Taxes -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_taxes']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

      <!-- Amount -->
      <xpath expr="//table[@name='invoice_line_table']//th[@name='th_subtotal']"
             position="attributes">
        <attribute name="style">font-weight: bold;</attribute>
      </xpath>

    </template>

  </data>
</odoo>
