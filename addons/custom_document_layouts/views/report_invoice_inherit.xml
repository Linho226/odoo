<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">

        <!-- Masquer complètement Invoice Date -->
        <xpath expr="//div[@name='invoice_date']" position="replace">
        </xpath>

        <!-- Masquer complètement Source -->
        <xpath expr="//div[@name='origin']" position="replace">
        </xpath>

        <!-- Masquer complètement Référence -->
        <xpath expr="//div[@name='reference']" position="replace">
        </xpath>

        <!-- Masquer complètement la Date de livraison -->
        <xpath expr="//div[@name='delivery_date']" position="replace">
        </xpath>

        <!-- Masquer complètement la section Communication de paiement -->
        <xpath expr="//div[@class='mb-3'][p[@name='payment_communication']]" position="replace">
        </xpath>

    </template>
</odoo>